@model CW2237A2.Models.InvoiceWithDetailViewModel

@{
    ViewBag.Title = "Invoice Details";
    const String customerInfoTitle = "Customer Info";
    const String billingAddressInfoTitle = "Billing Address";
    const String salesRepTitle = "Sales Rep";
    const String lineItemsTitle = "Line Items";
    const String trackDetailTitle = "Track";
}

<h2>Details for Invoice #@Model.InvoiceId</h2>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            @customerInfoTitle
        </dt>

        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.CustomerId)
        </dd>
        <div class="col-sm-3"></div>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.CustomerFirstName) @Html.DisplayFor(model => model.CustomerLastName)
        </dd>
        <div class="col-sm-3"></div>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.CustomerState) @Html.DisplayFor(model => model.CustomerCountry)
        </dd>

        <dt class="col-sm-3">
            @billingAddressInfoTitle
        </dt>

        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.BillingAddress)
        </dd>
        <div class="col-sm-3"></div>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.BillingCity) @Html.DisplayFor(model => model.BillingState)
        </dd>
        <div class="col-sm-3"></div>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.BillingCountry) @Html.DisplayFor(model => model.BillingPostalCode)
        </dd>

        <dt class="col-sm-3">
            @salesRepTitle
        </dt>

        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.CustomerEmployeeFirstName) @Html.DisplayFor(model => model.CustomerEmployeeLastName)
        </dd>

        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.InvoiceDate)
        </dt>

        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.InvoiceDate)
        </dd>

        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Total)
        </dt>

        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Total)
        </dd>
    </dl>

    <hr />

    <h4>@lineItemsTitle</h4>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.InvoiceLines.First().InvoiceLineId)
            </th>
            <th class="text-center">
                @trackDetailTitle
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InvoiceLines.First().UnitPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InvoiceLines.First().Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InvoiceLines.First().LinePrice)
            </th>
        </tr>

        @foreach (var item in Model.InvoiceLines)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.InvoiceLineId)
                </td>
                <td>
                    <dl class="row">
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(modelItem => item.TrackName):
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(modelItem => item.TrackName)
                        </dd>
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(modelItem => item.TrackComposer):
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(modelItem => item.TrackComposer)
                        </dd>
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(modelItem => item.TrackAlbumTitle):
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(modelItem => item.TrackAlbumTitle)
                        </dd>
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(modelItem => item.TrackAlbumArtistName):
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(modelItem => item.TrackAlbumArtistName)
                        </dd>
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(modelItem => item.TrackGenreName):
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(modelItem => item.TrackGenreName)
                        </dd>
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(modelItem => item.TrackMediaTypeName)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(modelitem => item.TrackMediaTypeName)
                        </dd>
                    </dl>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UnitPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LinePrice)
                </td>
            </tr>
        }

    </table>
</div>
<p>
    @Html.ActionLink("Back to List", "Index")
</p>
